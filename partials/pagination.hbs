{{! Custom pagination }}

<nav class="pagination" role="navigation">
	<ul class="pager">
	  {{#if prev}}
	    <li><a class="newer-posts" href="{{page_url prev}}">&larr; Newest</a></li>
	  {{/if}}
	  {{#if next}}
	    <li><a class="older-posts" href="{{page_url next}}">Older &rarr;</a></li>
	  {{/if}}
	</ul>
</nav>
{{!< default}}

{{! Blog section start }}
<div class="main-container">
	{{! Post enum }}
	{{#foreach posts}}
		<article class="post">
			<header class="post-header">
				<h2><a href="{{url}}">{{{title}}}</a></h2>
			</header>
			<section class="post-excerpt">
				<p>{{content words="35"}}</p> 
				<h6><a class="read-more" href="{{url}}">Read More <i class="fa fa-chevron-circle-right"></i></a></h6>
			</section>
			<footer class="post-meta">
				{{author}}  <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
			</footer>
		</article>
	
	{{/foreach}}
	{{pagination}}
</div>
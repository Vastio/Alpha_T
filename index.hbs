{{!< default}}

<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <div class="main-header-content">
        <div class="logo">
            {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}">
            <img src="{{@blog.logo}}" alt="Blog Logo" class="img-circle animated slideInDown"/></a>{{/if}}
        </div>
        <div class="message animated fadeInLeft">
            <p>{{@blog.description}}</p>
        </div>
        <div class="social-buttons animated fadeInRight">
            <ul class="list-inline">
                {{> social-buttons}}
            </ul>
        </div>
        <div class="button-down animated zoomIn">
            <a href="#blog-content" class="btn btn-default animated bounce" data-offset="-45">
                <i class="fa fa-angle-double-down fa-2x"></i>
            </a>
        </div>
    </div>
</header>

{{! Blog Section }}
<main id="blog-content" class="content">
    {{! partials/loop.hbsÂ }}
    {{> loop}}
</main>
